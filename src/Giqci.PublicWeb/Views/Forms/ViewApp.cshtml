@using Giqci.Chapi.Enums.App
@using Giqci.Chapi.Models.App
@using Giqci.PublicWeb.Extensions
@using Giqci.PublicWeb.Models
@using Giqci.Tools
@using Ktech.Extensions
@using Newtonsoft.Json
@model Giqci.Chapi.Models.App.Application
<div class="row" ng-controller="ViewAppController">
    <div class="col-md-12" id="print">
        <h1>@("".KeyToWord())查看 - {{model.Application.Key}}</h1>
        <div class="form-horizontal">
            <div class="form-horizontal">
                <div class="form-group">
                    <label class="col-sm-2 control-label">@("".KeyToWord())申请号</label>
                    <span class="col-sm-2 form-control-static">{{model.Application.Key}}</span>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">@("".KeyToWord())证书类别</label>
                    <p class="form-control-static col-sm-10">
                        <span ng-if="model.Application.C101">@("".KeyToWord())溯源证书</span>
                        <span ng-if="model.Application.C102">@("".KeyToWord())品质证书</span>
                        <span ng-if="model.Application.C103">@("".KeyToWord())标签证书</span>
                    </p>
                </div>
                <div class="form-group" ng-if="false">
                    <label class="col-sm-2 control-label">@("".KeyToWord())样张列表</label>
                    <div class="col-sm-10">
                        <div ng-repeat="item in model.Application.ExampleCertList">
                            <table class="table table-striped">
                                <colgroup>
                                    <col width="100" />
                                    <col width="100" />
                                </colgroup>
                                <tr>
                                    <th>@("".KeyToWord())样张{{$index+1}}</th>
                                    <td>
                                        <a href="@LanCore.GetLanTypeUrl()/file/viewfile?fileFullPath={{item.CertFilePath}}" target="_blank">查看文件</a>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">@("".KeyToWord())商业目的</label>
                    <span class="col-sm-2 form-control-static">{{model.Application.TradeType == 4?"一般贸易":"电商贸易"}}</span>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">@("".KeyToWord())创建日期</label>
                    <span class="col-sm-2 form-control-static">{{model.Application.CreateDate | date:'yyyy/MM/dd'}}</span>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">@("".KeyToWord())当前状态</label>
                    <span class="col-sm-2 form-control-static">{{StatusDescription}}</span>
                </div>
                <div class="form-group" ng-if="model.Application.DeclineReason">
                    <label class="col-sm-2 control-label">@("".KeyToWord())驳回理由</label>
                    <span class="col-sm-2 form-control-static">{{model.Application.DeclineReason}}</span>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">@("".KeyToWord())申请人</label>
                    <div class="col-sm-8">
                        <p class="form-control-static">@("".KeyToWord())全称: {{model.Application.Applicant}}</p>
                        <p class="form-control-static">@("".KeyToWord())地址: {{model.Application.ApplicantAddr}}</p>
                        <p class="form-control-static">@("".KeyToWord())联系人: {{model.Application.ApplicantContact}}</p>
                        <p class="form-control-static">@("".KeyToWord())联系电话: {{model.Application.ApplicantPhone}}</p>
                        <p class="form-control-static">@("".KeyToWord())邮箱:{{model.Application.ApplicantEmail}}</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">@("".KeyToWord())出口商</label>
                    <div class="col-sm-8">
                        <p class="form-control-static">@("".KeyToWord())全称: {{model.Application.Exporter}}</p>
                        <p class="form-control-static">@("".KeyToWord())地址: {{model.Application.ExporterAddr}}</p>
                        <p class="form-control-static">@("".KeyToWord())联系人: {{model.Application.ExporterContact}}</p>
                        <p class="form-control-static">@("".KeyToWord())联系电话: {{model.Application.ExporterPhone}}</p>
                    </div>
                </div>
                <div class="form-group">
                    <label ng-if="model.Application.TradeType==4" class="col-sm-2 control-label">@("".KeyToWord())进口商</label>
                    <label ng-if="model.Application.TradeType==1" class="col-sm-2 control-label">@("".KeyToWord())代理进口商</label>
                    <div class="col-sm-8">
                        <p class="form-control-static">@("".KeyToWord())全称:{{model.Application.Importer}}</p>
                        <p class="form-control-static">@("".KeyToWord())地址: {{model.Application.ImporterAddr}}</p>
                        <p class="form-control-static">@("".KeyToWord())联系人: {{model.Application.ImporterContact}}</p>
                        <p class="form-control-static">@("".KeyToWord())联系电话: {{model.Application.ImporterPhone}}</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">@("".KeyToWord())商品资料</label>
                    <div class="col-sm-8">
                        <div ng-repeat="item in model.Application.ApplicationProducts" class="application-product-area">
                            <table class="table table-hover application-table-margin">
                                <colgroup>
                                    <col width="150">
                                    <col width="235">
                                    <col width="150">
                                    <col width="235">
                                </colgroup>
                                <tr class="application-table-head">
                                    <th>
                                        <p class="form-control-static">@("".KeyToWord())商品 {{$index+1}}</p>
                                    </th>
                                    <td></td>
                                    <th></th>
                                    <td></td>
                                </tr>
                                <tr>
                                    <th>
                                        <p class="form-control-static">@("".KeyToWord())常用商品</p>
                                    </th>
                                    <td colspan="3">
                                        <p class="form-control-static">{{item.CiqCode}}</p>
                                    </td>
                                </tr>
                                <tr>
                                    <th>
                                        <p class="form-control-static">@("".KeyToWord())名称(英文)</p>
                                    </th>
                                    <td>
                                        <p class="form-control-static">{{item.DescriptionEn}}</p>
                                    </td>
                                    <th>
                                        <p class="form-control-static">@("".KeyToWord())名称(中文)</p>
                                    </th>
                                    <td>
                                        <p class="form-control-static">{{item.Description}}</p>
                                    </td>
                                </tr>
                                <tr>
                                    <th>
                                        <p class="form-control-static">@("".KeyToWord())品牌</p>
                                    </th>
                                    <td>
                                        <p class="form-control-static">{{item.Brand}}</p>
                                    </td>
                                    <th>
                                        <p class="form-control-static">@("".KeyToWord())包装</p>
                                    </th>
                                    <td>
                                        <p class="form-control-static">{{item.Package}}</p>
                                    </td>
                                </tr>
                                <tr>
                                    <th>
                                        <p class="form-control-static">@("".KeyToWord())规格</p>
                                    </th>
                                    <td>
                                        <p class="form-control-static">{{item.Spec}}</p>
                                    </td>
                                    <th>
                                        <p class="form-control-static">@("".KeyToWord())原产国</p>
                                    </th>
                                    <td>
                                        <p class="form-control-static" ajax-label ajax-url="countries" ng-model="item.ManufacturerCountry">{{item.ManufacturerCountry}}</p>
                                    </td>
                                </tr>
                                <tr>
                                    <th>
                                        <p class="form-control-static">@("".KeyToWord())HS编码</p>
                                    </th>
                                    <td>
                                        <p class="form-control-static" ng-model="item.HSCode">{{item.HSCode}}</p>
                                    </td>
                                    <th>
                                        <p class="form-control-static">@("".KeyToWord())制造商</p>
                                    </th>
                                    <td>
                                        <p ng-model="item.Manufacturer" class="form-control-static">{{item.Manufacturer}}</p>
                                    </td>
                                </tr>
                                <tr>
                                    <th>
                                        <p class="form-control-static">@("".KeyToWord())数量</p>
                                    </th>
                                    <td>
                                        <p class="form-control-static" ng-model="item.Quantity">{{item.Quantity}}</p>
                                    </td>
                                    <th></th>
                                    <td></td>
                                </tr>
                                <tr ng-if="model.Application.C102">
                                    <th>
                                        <p class="form-control-static">@("".KeyToWord())品质检验</p>
                                    </th>
                                    <td>
                                        <p class="form-control-static">{{item.C102?'是':'否'}}</p>
                                    </td>
                                    <th>
                                        <p class="form-control-static" ng-if="item.C102">@("".KeyToWord())检测项目</p>
                                    </th>
                                    <td>
                                        <p class="form-control-static" ng-if="item.C102">{{item.C102Comment}}</p>
                                    </td>
                                </tr>
                            </table>
                            <!--批次-->
                            <div>
                                <table class="table table-hover application-table-margin">
                                    <colgroup>
                                        <col width="150" />
                                        <col width="620" />
                                    </colgroup>
                                    <tr ng-repeat="batch in item.ProductItemList">
                                        <th>
                                            <p class="form-control-static">@("".KeyToWord())批次号/保质期</p>
                                        </th>
                                        <td>
                                            <p class="form-control-static">{{batch.BatchNo}}</p>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <!--end批次-->
                            <!--真知码-->
                            <table class="table table-hover ">
                                <colgroup>
                                    <col width="150" />
                                    <col width="310" />
                                    <col width="310" />
                                </colgroup>
                                <tr>
                                    <th><p class="form-control-static">@("".KeyToWord())真知码</p></th>
                                    <th><p class="form-control-static">@("".KeyToWord())首码</p></th>
                                    <th><p class="form-control-static">@("".KeyToWord())尾码</p></th>
                                </tr>
                                <tr ng-repeat="zcode in item.ApplicationZCodes">
                                    <td>
                                        <p class="form-control-static">@("".KeyToWord())真知码{{$index+1}}</p>
                                    </td>
                                    <td>
                                        <p class="form-control-static">{{zcode.ZCodeStart}}</p>
                                    </td>
                                    <td>
                                        <p class="form-control-static">{{zcode.ZCodeEnd}}</p>
                                    </td>
                                </tr>
                            </table>
                            <!--end真知码-->
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">@("".KeyToWord())运输方式</label>
                    <span class="col-sm-8 form-control-static" ng-if="model.Application.ShippingMethod==1">@("".KeyToWord())空运</span>
                    <span class="col-sm-8 form-control-static" ng-if="model.Application.ShippingMethod==2">@("".KeyToWord())海运</span>
                    <span class="col-sm-8 form-control-static" ng-if="model.Application.ShippingMethod==3">@("".KeyToWord())陆运</span>
                </div>
                <div class="form-group" ng-show="model.Application.ShippingMethod === 2">
                    <label class="col-sm-2 control-label">@("".KeyToWord())船舶资料</label>
                    <div class="col-sm-8">
                        <div ng-repeat="item in model.Application.ContainerInfos">
                            <table class="table table-striped">
                                <colgroup>
                                    <col width="100" />
                                    <col width="100" />
                                </colgroup>
                                <tr>
                                    <th>@("".KeyToWord())装箱信息{{$index+1}}</th>
                                    <td></td>
                                </tr>
                                <tr>
                                    <th>@("".KeyToWord())装箱号</th>
                                    <td>{{item.ContainerNumber}}</td>
                                </tr>
                                <tr>
                                    <th>@("".KeyToWord())铅封号</th>
                                    <td>{{item.SealNumber}}</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">@("".KeyToWord())提单号</label>
                    <span class="col-sm-8 form-control-static">{{model.Application.BillNo}}</span>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">@("".KeyToWord())副提单号</label>
                    <span class="col-sm-8 form-control-static">{{model.Application.OtherBillNo}}</span>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">
                        <p ng-if="model.Application.ShippingMethod == 1">@("".KeyToWord())航班号</p>
                        <p ng-if="model.Application.ShippingMethod == 2">@("".KeyToWord())船舶号</p>
                        <p ng-if="model.Application.ShippingMethod == 3">@("".KeyToWord())车牌号</p>
                    </label>
                    <span class="col-sm-8 form-control-static">{{model.Application.Vesselcn}}</span>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">@("".KeyToWord())出发日期</label>
                    <span class="col-sm-8 form-control-static">{{model.Application.Voyage}}</span>
                </div>
                <div class="form-group" ng-if="model.Application.ShippingMethod != 2">
                    <label class="col-sm-2 control-label">@("".KeyToWord())运输总数量</label>
                    <span class="col-sm-8 form-control-static">{{model.Application.TotalUnits}}Pallet(s)</span>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">@("".KeyToWord())运输总重量</label>
                    <span class="col-sm-8 form-control-static">{{model.Application.TotalWeight | currency:"":2}}KG</span>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">@("".KeyToWord())计划发货日期</label>
                    <span class="col-sm-8 form-control-static">{{model.Application.ShippingDate | date:'yyyy/MM/dd'}}</span>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">@("".KeyToWord())预约检查日期</label>
                    <span class="col-sm-8 form-control-static">{{model.Application.InspectionDate | date:'yyyy/MM/dd'}}</span>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">@("".KeyToWord())检验地点</label>
                    <span class="col-sm-8 form-control-static">{{model.Application.InspectionAddr}}</span>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">@("".KeyToWord())联系人</label>
                    <span class="col-sm-8 form-control-static">{{model.Application.Inspector}}</span>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">@("".KeyToWord())联系人电话</label>
                    <span class="col-sm-8 form-control-static">{{model.Application.InspectorTel}}</span>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">@("".KeyToWord())发货港口</label>
                    <span ajax-label ajax-url="ports" ng-model="model.Application.LoadingPort" class="col-sm-8 form-control-static">{{model.Application.LoadingPort}}</span>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">@("".KeyToWord())目的港口</label>
                    <span ajax-label ajax-url="ports" ng-model="model.Application.DestPort" class="col-sm-8 form-control-static">{{model.Application.DestPort}}</span>
                </div>
                @{
                    var validCerts = (List<Certificate>)ViewBag.ValidCerts;
                    if (validCerts.Any())
                    {
                        <div class="form-horizontal">
                            <div class="form-group">
                                <label class="col-sm-2 control-label">@("".KeyToWord())证书列表</label>
                                <div class="col-sm-10">
                                    @foreach (var item in validCerts)
                                    {
                                        //todo CertType.C101 and c102
                                        if (item.SignedDate >= Config.Common.ShowCertTimeLine)
                                        {
                                            if (item.CertType == CertType.C101)
                                            {
                                                <div class="form-control-static">
                                                    <strong>@item.CertType.ToDescription()</strong>：<a target="_blank" href="@string.Format("{0}/{1}", Config.Common.ViewFileUrl, Filer.EncryptFilePath(Config.Common.CertFileSavePath, item.CertPath.Substring(0, item.CertPath.Length - 4)+".draft.pdf"))">@item.CertNo</a> by @item.SignedBy @item.SignedDate.DateToString()
                                                </div>
                                            }
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
    <div class="form-horizontal" ng-if="IsPrint">
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button class="btn btn-default" onclick="print()">
                    <span class="glyphicon glyphicon-print" aria-hidden="true"></span>@("".KeyToWord())打印
                </button>
            </div>
        </div>
    </div>
</div>
@section Footer{
    <script src="http://code.jquery.com/jquery-migrate-1.1.0.js"></script>
    <script src="~/Global/js/jquery.jqprint-0.3.js"></script>
    <script type="text/javascript">
        app.controller('ViewAppController', [
            '$scope', function ($scope) {
                $scope.model = {};
                $scope.model.Application = ObjDecodeToJson(@HtmlExtensions.RawJson(Model));
                $scope.StatusDescription = "@Model.Status.ToDescription()";
                $scope.ShippingMethodDescription = "@Model.ShippingMethod.ToDescription()";
                $scope.IsPrint = "@ViewBag.IsPrint" == "True";
            }
        ]);

        function print() {
            $("#print").jqprint();
        }
    </script>
}