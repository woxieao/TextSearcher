                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">进口商</label>
                    <div class="col-sm-10">
                        <input type="text" name="Application.Importer" ng-model="model.Application.Importer" class="form-control" placeholder="全称" />
                        <input type="text" name="Application.ImporterAddr" ng-model="model.Application.ImporterAddr" class="form-control" placeholder="地址" />
                        <input type="text" name="Application.ImporterContact" ng-model="model.Application.ImporterContact" class="form-control" placeholder="联系人" />
                        <input type="text" name="Application.ImporterPhone" ng-model="model.Application.ImporterPhone" class="form-control" placeholder="联系电话" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">进口商代理</label>
                    <div class="col-sm-10">
                        <input type="text" name="Application.ImBroker" ng-model="model.Application.ImBroker" class="form-control" placeholder="全称" />
                        <input type="text" name="Application.ImBrokerAddr" ng-model="model.Application.ImBrokerAddr" class="form-control" placeholder="地址" />
                        <input type="text" name="Application.ImBrokerContact" ng-model="model.Application.ImBrokerContact" class="form-control" placeholder="联系人" />
                        <input type="text" name="Application.ImBrokerPhone" ng-model="model.Application.ImBrokerPhone" class="form-control" placeholder="联系电话" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">商品资料</label>
                    <div class="col-sm-10">
                        <div ng-repeat="item in model.Application.Goods">
                            <table class="table table-striped">
                                <colgroup>
                                    <col width="120" />
                                    <col width="360" />
                                    <col width="120" />
                                    <col width="360" />
                                </colgroup>
                                <tr>
                                    <th>
                                        <p class="form-control-static">商品 {{$index+1}}</p>
                                    </th>
                                    <td colspan="3">
                                        <button class="btn btn-default" type="button" ng-click="removeitem($index)"><span class="glyphicon glyphicon-minus-sign" aria-hidden="true"></span> 删除</button>
                                    </td>
                                </tr>
                                <tr>
                                    <th><p class="form-control-static">商品备案号</p></th>
                                    <td colspan="3">
                                        <div class="form-group">
                                            <div class="col-sm-6">
                                                <p class="form-control-static" ng-if="(isEdit&&item.isEditSelectDefault)">{{item.CiqCode}}</p>
                                                <select ng-if="!isEdit||(isEdit&&!item.isEditSelectDefault)" class="form-control" ng-change="selectProduct(item.Selected,$index)" ng-model="item.Selected" ng-options="mp.CiqCode for mp in merchantProductList">
                                                    <option value="">--请选择--</option>
                                                </select>
                                                <input ng-if="!isEdit||(isEdit&&!item.isEditSelectDefault)" type="hidden" ng-model="item.CiqCode" />
                                            </div>
                                            <div class="col-sm-6">
                                                <a class="btn btn-default" ng-click="addItemByBatchNo($index)"><span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>&nbsp;添加批次号</a>
                                                &nbsp;&nbsp;&nbsp;&nbsp;
                                                <a class="btn btn-default" href="/goods/list"><span class="glyphicon glyphicon-link" aria-hidden="true"></span>&nbsp;商品管理</a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <th><p class="form-control-static">名称(英文) *</p></th>
                                    <td>
                                        <p class="form-control-static" ng-if="(item.Selected!=null&&!isEdit)||(isEdit&&!item.isEditInputDefault)">{{item.DescriptionEn}}</p>
                                        <input ng-if="(item.Selected==null&&!isEdit)||(isEdit&&item.isEditInputDefault)" type="text" ng-model="item.DescriptionEn" class="form-control" />
                                    </td>
                                    <th><p class="form-control-static">名称(中文)</p></th>
                                    <td>
                                        <p class="form-control-static" ng-if="(item.Selected!=null&&!isEdit)||(isEdit&&!item.isEditInputDefault)">{{item.Description}}</p>
                                        <input ng-if="(item.Selected==null&&!isEdit)||(isEdit&&item.isEditInputDefault)" type="text" ng-model="item.Description" class="form-control" />
                                    </td>
                                </tr>
                                <tr>
                                    <th><p class="form-control-static">品牌 *</p></th>
                                    <td>
                                        <p class="form-control-static" ng-if="(item.Selected!=null&&!isEdit)||(isEdit&&!item.isEditInputDefault)">{{item.Brand}}</p>
                                        <input ng-if="(item.Selected==null&&!isEdit)||(isEdit&&item.isEditInputDefault)" type="text" ng-model="item.Brand" class="form-control" />
                                    </td>
                                    <th><p class="form-control-static">包装 *</p></th>
                                    <td>
                                        <p class="form-control-static" ng-if="(item.Selected!=null&&!isEdit)||(isEdit&&!item.isEditInputDefault)">{{item.Package}}</p>
                                        <select ng-if="(item.Selected==null&&!isEdit)||(isEdit&&item.isEditInputDefault)" ng-model="item.Package" class="form-control half-form-control">
                                            <option value="罐装">罐装</option>
                                            <option value="瓶装">瓶装</option>
                                            <option value="袋装">袋装</option>
                                            <option value="盒装">盒装</option>
                                        </select>
                                    </td>
                                </tr>
                                <tr>
                                    <th><p class="form-control-static">规格型号 *</p></th>
                                    <td>
                                        <p class="form-control-static" ng-if="(item.Selected!=null&&!isEdit)||(isEdit&&!item.isEditInputDefault)">{{item.Spec}}</p>
                                        <input ng-if="(item.Selected==null&&!isEdit)||(isEdit&&item.isEditInputDefault)" type="text" class="form-control" ng-model="item.Spec" />
                                    </td>
                                    <th><p class="form-control-static">制造国代码 *</p></th>
                                    <td>
                                        <p ajax-label ajax-url="countries" ng-model="item.ManufacturerCountry" class="form-control-static" ng-if="(item.Selected!=null&&!isEdit)||(isEdit&&!item.isEditInputDefault)">{{item.ManufacturerCountry}}</p>
                                        <select ng-if="(item.Selected==null&&!isEdit)||(isEdit&&item.isEditInputDefault)" ng-model="item.ManufacturerCountry" class="form-control" ng-mouseover="countryClickHandler($event)" ng-options="country.Code as country.CnName for country in loadCountriesDict" style="width: 100%"></select>
                                    </td>
                                </tr>
                                <tr>
                                    <th><p class="form-control-static">HS编码 *</p></th>
                                    <td colspan="3">
                                        <p class="form-control-static" ng-if="(item.Selected!=null&&!isEdit)||(isEdit&&!item.isEditInputDefault)">{{item.HSCode}}</p>
                                        <select ajax-select ajax-url="commonhscodes" ng-if="(item.Selected==null&&!isEdit)||(isEdit&&item.isEditInputDefault)" ng-model="item.HSCode" class="form-control" style="width: 100%"></select>
                                    </td>
                                </tr>
                                <tr ng-show="model.Application.C102">
                                    <th><p class="form-control-static">品质检验</p></th>
                                    <td>
                                        <div class="checkbox">
                                            <label><input type="checkbox" ng-model="item.C102" />是否检查</label>
                                        </div>
                                    </td>
                                    <th>
                                        <span ng-show="item.C102">检测项目</span>
                                    </th>
                                    <td>
                                        <span ng-show="item.C102"><input type="text" ng-model="item.C102Comment" class="form-control" maxlength="100" /></span>
                                    </td>
                                </tr>
                            </table>
                            <div ng-repeat="batch in item.ProductItemList">
                                <table class="table table-striped">
                                    <colgroup>
                                        <col width="120" />
                                        <col width="360" />
                                        <col width="120" />
                                        <col width="360" />
                                    </colgroup>
                                    <tr>
                                        <th><p class="form-control-static">商品批次 {{$index+1}}</p></th>
                                        <td colspan="3"><button class="btn btn-default" type="button" ng-click="removeItemByBatchNo($parent.$index,$index)"><span class="glyphicon glyphicon-minus-sign" aria-hidden="true"></span> 删除批次</button></td>
                                    </tr>
                                    <tr>
                                        <th><p class="form-control-static">生产日期</p></th>
                                        <td>
                                            <input type="text" ng-model="batch.ManufacturerDate" class="form-control datetimepicker" ng-mousedown="itemClickHandler($event)" />
                                        </td>
                                        <th><p class="form-control-static">保质期 *</p></th>
                                        <td>
                                            <input type="text" ng-model="batch.ExpiryDate" class="form-control datetimepicker" ng-mousedown="itemClickHandler($event)" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <th><p class="form-control-static">批次号</p></th>
                                        <td>
                                            <input type="text" ng-model="batch.BatchNo" class="form-control" maxlength="100" />
                                        </td>
                                        <th><p class="form-control-static">数量 *</p></th>
                                        <td>
                                            <input type="number" ng-model="batch.Quantity" min="0" class="form-control half-form-control" />
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <button class="btn btn-default" type="button" ng-click="additem()"><span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span> 添加商品</button>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">运输方式</label>
                    <div class="col-sm-10">
                        <div class="radio">
                            <label><input type="radio" ng-model="model.Application.ShippingMethod" value="A" ng-click="check_A();" /> 空运</label>
