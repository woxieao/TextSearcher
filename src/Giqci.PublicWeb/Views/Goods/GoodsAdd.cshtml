@using Giqci.PublicWeb.Extensions
@{
    ViewBag.Title ="add_record_merchandise".KeyToWord();
   
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div ng-controller="GoodsAddController">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">
                @("add_record_merchandise".KeyToWord())
                <span class="pull-right">
                    <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>&nbsp;<a href="@LanCore.GetLanTypeUrl("/goods/list")">@("return_to_list".KeyToWord())</a>
                </span>
            </h3>
        </div>
        <div class="panel-body">
            <form name="productForm" class="form-horizontal" ng-submit="getproductlist(productForm.$valid)" novalidate>
                <div class="form-group">
                    <label class="col-sm-2 control-label">@("commodity_record_number".KeyToWord())</label>
                    <div class="col-sm-8">
                        <div class="form-inline">
                            <input type="text"
                                   placeholder="@("please_enter_a_complete_commodity_record_number".KeyToWord())"
                                   ng-model="CiqCode"
                                   reuqired
                                   class="form-control goodAdd-search-bar"
                                   ucc-pattern="^((\d{10})|(ICIP\d{14}))$"
                                   ucc-tip-direction="3"
                                   submit-btn-id="searchButton"
                                   ucc-pattern-message="@("commodity_record_number_prompt_msg".KeyToWord())！" />
                            <span>
                                <button class="btn btn-default" type="submit" id="searchButton" ng-disabled="alreadySubmit">
                                    <span class="glyphicon glyphicon-search" aria-hidden="true"></span> @("search".KeyToWord())
                                </button>
                            </span>
                        </div>
                        <span class="help-block" ng-class="{'text-red': showError }" ng-bind="errorMsg" ng-show="showError"></span>
                    </div>
                </div>
                <div ng-show="Product!=null">
                    <table class="table table-striped table-layout-fixed">
                        <colgroup>
                            <col width='100' />
                            <col width='80' />
                            <col />
                            <col />
                            <col width='80' />
                            <col width='140' />
                            <col width='80' />
                            <col width='80' />
                            @*<col width='80' />*@
                            <col width='80' />
                        </colgroup>
                        <thead>
                            <tr>
                                <th>@("commodity_record_number".KeyToWord())</th>
                                <th>@("hs_code".KeyToWord())</th>
                                <th>@("name".KeyToWord())(@("chinese".KeyToWord()))</th>
                                <th>@("name".KeyToWord())(@("english".KeyToWord()))</th>
                                <th>@("spec".KeyToWord())</th>
                                <th>@("brand".KeyToWord())</th>
                                <th>@("country_of_origin".KeyToWord())</th>
                                @*<th>包装</th>*@
                                <th>@("manufacturer".KeyToWord())</th>
                                <th>@("operation".KeyToWord())</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="td-ellipsis" title="{{Product.CiqCode}}">{{Product.CiqCode}}</td>
                                <td class="td-ellipsis" title="{{Product.HsCode}}">{{Product.HsCode}}</td>
                                <td class="td-ellipsis" title="{{Product.Description}}">{{Product.Description}}</td>
                                <td class="td-ellipsis" title="{{Product.DescriptionEn}}">{{Product.DescriptionEn}}</td>
                                <td class="td-ellipsis" title="{{Product.Spec}}">{{Product.Spec}}</td>
                                <td class="td-ellipsis" title="{{Product.Brand}}">{{Product.Brand}}</td>
                                <td class="td-ellipsis" title="{{Product.ManufacturerCountry}}">
                                    <p ajax-label ajax-url="countries" ng-model="Product.ManufacturerCountry">{{Product.ManufacturerCountry}}</p>
                                </td>
                                @*<td class="td-ellipsis" title="{{Product.Package}}">{{Product.Package}}</td>*@
                                <td class="td-ellipsis" title="{{Product.Manufacturer}}">{{Product.Manufacturer}}</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <button type="button" class="btn btn-primary btn-sm" ng-click="addproduct()">@("add".KeyToWord())</button>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </form>
        </div>
    </div>
</div>