@using Giqci.PublicWeb.Extensions
@{
    //ViewBag.Title =@("".KeyToWord()) "添加备案商品";
    ViewBag.Title = "添加备案商品";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div ng-controller="GoodsAddController">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">
                @("".KeyToWord())添加备案商品
                <span class="pull-right">
                    <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>&nbsp;<a href="@LanCore.GetLanTypeUrl()/goods/list">返回列表</a>
                </span>
            </h3>
        </div>
        <div class="panel-body">
            <form name="productForm" class="form-horizontal" ng-submit="getproductlist(productForm.$valid)" novalidate>
                <div class="form-group">
                    <label class="col-sm-2 control-label">@("".KeyToWord())商品备案号</label>
                    <div class="col-sm-8">
                        <div class="form-inline">
                            <input type="text"
                                   placeholder="@("".KeyToWord())请输入完整的商品备案号"
                                   ng-model="CiqCode"
                                   reuqired
                                   class="form-control goodAdd-search-bar"
                                   ucc-pattern="^((\d{10})|(ICIP\d{14}))$"
                                   ucc-tip-direction="3"
                                   submit-btn-id="searchButton"
                                   ucc-pattern-message="@("".KeyToWord())正确的备案号格式为[ICIP+14个数字]或[10个数字]！" />
                            <span>
                                <button class="btn btn-default" type="submit" id="searchButton" ng-disabled="alreadySubmit">
                                    <span class="glyphicon glyphicon-search" aria-hidden="true"></span> @("".KeyToWord())搜索
                                </button>
                            </span>
                        </div>
                        <span class="help-block" ng-class="{'text-red': showError }" ng-bind="errorMsg" ng-show="showError"></span>
                    </div>
                </div>
                <div ng-show="Product!=null">
                    <table class="table table-striped table-layout-fixed">
                        <colgroup>
                            <col width='100' />
                            <col width='80' />
                            <col />
                            <col />
                            <col width='80' />
                            <col width='140' />
                            <col width='80' />
                            <col width='80' />
                            @*<col width='80' />*@
                            <col width='80' />
                        </colgroup>
                        <thead>
                            <tr>
                                <th>@("".KeyToWord())商品备案号</th>
                                <th>@("".KeyToWord())HS编码</th>
                                <th>@("".KeyToWord())名称(中文)</th>
                                <th>@("".KeyToWord())名称(英文)</th>
                                <th>@("".KeyToWord())规格</th>
                                <th>@("".KeyToWord())品牌</th>
                                <th>@("".KeyToWord())原产国</th>
                                @*<th>包装</th>*@
                                <th>@("".KeyToWord())制造商</th>
                                <th>@("".KeyToWord())操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="td-ellipsis" title="{{Product.CiqCode}}">{{Product.CiqCode}}</td>
                                <td class="td-ellipsis" title="{{Product.HsCode}}">{{Product.HsCode}}</td>
                                <td class="td-ellipsis" title="{{Product.Description}}">{{Product.Description}}</td>
                                <td class="td-ellipsis" title="{{Product.DescriptionEn}}">{{Product.DescriptionEn}}</td>
                                <td class="td-ellipsis" title="{{Product.Spec}}">{{Product.Spec}}</td>
                                <td class="td-ellipsis" title="{{Product.Brand}}">{{Product.Brand}}</td>
                                <td class="td-ellipsis" title="{{Product.ManufacturerCountry}}">
                                    <p ajax-label ajax-url="countries" ng-model="Product.ManufacturerCountry">{{Product.ManufacturerCountry}}</p>
                                </td>
                                @*<td class="td-ellipsis" title="{{Product.Package}}">{{Product.Package}}</td>*@
                                <td class="td-ellipsis" title="{{Product.Manufacturer}}">{{Product.Manufacturer}}</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <button type="button" class="btn btn-primary btn-sm" ng-click="addproduct()">@("".KeyToWord())添加</button>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </form>
        </div>
    </div>
</div>