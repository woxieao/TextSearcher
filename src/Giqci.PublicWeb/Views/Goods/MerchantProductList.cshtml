@using Giqci.PublicWeb.Extensions
@{
    ViewBag.Title = "list_of_goods".KeyToWord();

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div ng-controller="GoodsListController">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">@("list_of_goods".KeyToWord())</h3>
        </div>
        <div class="panel-body">
            <div class="goodList-search-bar">
                <form class="form-inline">
                    <a class="btn btn-primary btn-sm" href="@LanCore.GetLanTypeUrl("/goods/add")">@("add_record_merchandise".KeyToWord())</a> &nbsp;&nbsp;<a class="btn btn-primary btn-sm" href="@LanCore.GetLanTypeUrl("/goods/showcustomproduct")">@("add_customer_goods".KeyToWord())</a>
                    <input type="text" class="form-control" placeholder="@("please_enter_a_keyword".KeyToWord())" ng-model="keyword" />
                    <button class="btn btn-default" ng-click="search()">
                        <span class="glyphicon glyphicon-search" aria-hidden="true"></span> @("search".KeyToWord())
                    </button>
                </form>
            </div>
            <ul class="nav nav-tabs">
                <li class="active">
                    <a href="#ciqProduct" data-toggle="tab">@("record_commodity".KeyToWord())</a>
                </li>
                <li>
                    <a href="#custProduct" data-toggle="tab">@("customer_goods".KeyToWord())</a>
                </li>
            </ul>
            <div class="tab-content">
                <div role="tabpanel" class="form-horizontal tab-pane fade in active panel-body" id="ciqProduct">
                    <div class="form-group">
                        <table class="table custom-table custom-table-striped table-layout-fixed custom-table-hover">
                            <colgroup>
                                <col width='200' />
                                <col width='120' />
                                <col />
                                <col width='100' />
                                <col width='100' />
                                <col width='100' />
                                <col width='100' />
                                <col width='100' />
                                <col width='80' />
                            </colgroup>
                            <thead>
                                <tr>
                                    <th>
                                        <span style="color: green">@("commodity_record_number".KeyToWord())<span style="font-size: 10px; color: red;">(@("commodity_record_number_for_details_msg".KeyToWord()))</span></span>
                                    </th>
                                    <th>@("hs_code".KeyToWord())</th>
                                    <th>@("name".KeyToWord())(@("chinese".KeyToWord()))</th>
                                    <th>@("name".KeyToWord())(@("english".KeyToWord()))</th>
                                    <th>@("spec".KeyToWord())</th>
                                    <th>@("brand".KeyToWord())</th>
                                    <th>@("country_of_origin".KeyToWord())</th>
                                    <th>@("manufacturer".KeyToWord())</th>
                                    <th>@("operation".KeyToWord())</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="Product in merchantProductList">
                                    <td class="td-ellipsis" style="color: green" title="{{Product.CiqCode}}"><a href="javascript:;" ng-click="showproduct(Product.CiqCode)">{{Product.CiqCode}}</a></td>
                                    <td class="td-ellipsis" title="{{Product.HsCode}}">{{Product.HsCode}}</td>
                                    <td class="td-ellipsis" title="{{Product.Description}}">{{Product.Description}}</td>
                                    <td class="td-ellipsis" title="{{Product.DescriptionEn}}">{{Product.DescriptionEn}}</td>
                                    <td class="td-ellipsis" title="{{Product.Spec}}">{{Product.Spec}}</td>
                                    <td class="td-ellipsis" title="{{Product.Brand}}">{{Product.Brand}}</td>
                                    <td>
                                        @*<span ajax-label ajax-url="countries" ng-model="Product.ManufacturerCountry">{{Product.ManufacturerCountry}}</span>*@
                                        {{isEn?Product.ManufacturerCountryEnName:Product.ManufacturerCountryCnName}}
                                    </td>
                                    <td class="td-ellipsis" title="{{Product.Manufacturer}}">{{Product.Manufacturer}}</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <button type="button" class="btn btn-danger btn-sm" ng-click="remove(Product.Key,$index)">@("delete".KeyToWord())</button>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div role="tabpanel" class="form-horizontal tab-pane fade panel-body" id="custProduct">
                    <div class="form-group">
                        <table class="table custom-table custom-table-striped table-layout-fixed custom-table-hover">
                            <colgroup>
                                <col width='140' />
                                <col width='120' />
                                <col />
                                <col width='100' />
                                <col width='80' />
                                <col width='100' />
                                <col width='100' />
                                <col width='60' />
                                <col width='100' />
                                <col width='200' />
                            </colgroup>
                            <thead>
                                <tr>
                                    <th>
                                        <span style="color: orangered">@("customizes_identity".KeyToWord())</span>
                                    </th>
                                    <th>@("hs_code".KeyToWord())</th>
                                    <th>@("name".KeyToWord())(@("chinese".KeyToWord()))</th>
                                    <th>@("name".KeyToWord())(@("english".KeyToWord()))</th>
                                    <th>@("spec".KeyToWord())</th>
                                    <th>@("brand".KeyToWord())</th>
                                    <th>@("country_of_origin".KeyToWord())</th>
                                    <th>@("package".KeyToWord())</th>
                                    <th>@("manufacturer".KeyToWord())</th>
                                    <th>@("operation".KeyToWord())</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="Product in customProductList">
                                    <td class="td-ellipsis" style="color: orangered" title="{{Product.Key}}">{{Product.Key}}</td>
                                    <td class="td-ellipsis" title="{{Product.HsCode}}">{{Product.HsCode}}</td>
                                    <td class="td-ellipsis" title="{{Product.Description}}">{{Product.Description}}</td>
                                    <td class="td-ellipsis" title="{{Product.DescriptionEn}}">{{Product.DescriptionEn}}</td>
                                    <td class="td-ellipsis" title="{{Product.Spec}}">{{Product.Spec}}</td>
                                    <td class="td-ellipsis" title="{{Product.Brand}}">{{Product.Brand}}</td>
                                    <td>
                                        @*<span ajax-label ajax-url="countries" ng-model="Product.ManufacturerCountry">{{Product.ManufacturerCountry}}</span>*@
                                        {{isEn?Product.ManufacturerCountryEnName:Product.ManufacturerCountryCnName}}
                                    </td>
                                    <td>{{Product.Package | product_package_language}}</td>
                                    <td class="td-ellipsis" title="{{Product.Manufacturer}}">{{Product.Manufacturer}}</td>
                                    <td>
                                        <div class="btn-group pull-right" role="group">
                                            <button ng-if="Product.IsApproved" class="btn btn-default btn-sm" ng-click="lookMerchantProduct($index)">@("view".KeyToWord())</button>
                                            <button ng-if="!Product.IsApproved" class="btn btn-default btn-sm" ng-click="editMerchantProduct($index)">@("edit".KeyToWord())</button>
                                            <button type="button" class="btn btn-primary btn-sm" ng-click="changeProduct($index)">@("transferred_to_the_record_commodity".KeyToWord())</button>
                                            <button type="button" class="btn btn-danger btn-sm" ng-click="remove2(Product.Key,$index)">@("delete".KeyToWord())</button>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Html.Partial("PopUp/EditProduct")
    @Html.Partial("PopUp/ChangeProduct")
    @Html.Partial("PopUp/ProductView")
    @Html.Partial("PopUp/ViewProduct")
</div>