@{
    ViewBag.Title = "商品列表";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div ng-controller="GoodsListController">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">商品列表</h3>
        </div>
        <div class="panel-body">
            <ul class="note">
                <li>
                    <a class="btn btn-primary btn-sm" href="/goods/add">按备案号添加商品</a> &nbsp;&nbsp;<a class="btn btn-primary btn-sm" href="/goods/showcustomproduct">添加自定义商品</a>
                </li>
            </ul>
            <table class="table table-striped">
                <colgroup>
                    <col width='140'/>
                    <col width='140'/>
                    <col width='140'/>
                    <col width='140'/>
                    <col width='140'/>
                    <col width='140'/>
                    <col width='140'/>
                    <col width='140'/>
                    <col width='80'/>
                </colgroup>
                <thead>
                <tr>
                    <th>商品备案号</th>
                    <th>HS编码</th>
                    <th>中文名</th>
                    <th>英文名</th>
                    <th>规格</th>
                    <th>品牌</th>
                    <th>制造国代码</th>
                    <th>数量/包装</th>
                    <th>操作</th>
                </tr>
                </thead>
                <tbody>
                <tr ng-repeat="Product in customProductList">
                    <td>--</td>
                    <td>{{Product.HsCode}}</td>
                    <td>{{Product.Description}}</td>
                    <td>{{Product.DescriptionEn}}</td>
                    <td>{{Product.Spec}}</td>
                    <td>{{Product.Brand}}</td>
                    <td>{{Product.ManufacturerCountry}}</td>
                    <td>{{Product.Package}}</td>
                    <td>
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-danger btn-sm" ng-click="remove2(Product.Id,$index)">删除</button>
                        </div>
                        <div class="btn-group" role="group">
                            <div ng-show="!Product.IsApproved">
                                <a href="/goods/showcustomproduct?id={{Product.Id}}">编辑</a>
                            </div>
                            <div ng-show="Product.IsApproved">
                                <strong>不可编辑</strong>
                            </div>
                        </div>

                    </td>

                </tr>
                <tr ng-repeat="Product in merchantProductList">
                    <td>{{Product.CiqCode}}</td>
                    <td>{{Product.HsCode}}</td>
                    <td>{{Product.Description}}</td>
                    <td>{{Product.DescriptionEn}}</td>
                    <td>{{Product.Spec}}</td>
                    <td>{{Product.Brand}}</td>
                    <td>{{Product.ManufacturerCountry}}</td>
                    <td>{{Product.Package}}</td>
                    <td>
                        <div class="btn-group" role="group">
                            <button type="button" class="btn btn-danger btn-sm" ng-click="remove(Product.CiqCode,$index)">删除</button>
                        </div>
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>