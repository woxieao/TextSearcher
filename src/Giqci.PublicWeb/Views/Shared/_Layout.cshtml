@using Giqci.PublicWeb.Extensions
@using Giqci.PublicWeb.Models
@using Giqci.PublicWeb.Extensions
<!DOCTYPE html>
<html ng-app="giqci">
<head>
    <script type="text/javascript">
        var LanguageData = @("".GetAllWords());
    </script>
     <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title | GIQCI - Global Independent QC and Inspection</title>
    <link rel="shortcut icon" href="http://www.giqci.com.au/favicon.png" />
    <link href="/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="/Global/css/default.css" rel="stylesheet" />
    @*<link rel="stylesheet" id="ls-google-fonts-css" href='http://fonts.useso.com/css?family=Lato:100,300,regular,700,900%7COpen+Sans:300%7CIndie+Flower:regular%7COswald:300,regular,700&#038;subset=latin%2Clatin-ext' type='text/css' media='all' />
        <link rel="stylesheet" id="redux-google-fonts-css" href='http://fonts.useso.com/css?family=Raleway%3A400&#038;subset=latin&#038;ver=1432745489' type='text/css' media='all' />*@
    <script src="~/Global/js/jquery-2.1.4.min.js"></script>
    <script src="~/Global/layer-v2.3/layer/@LanCore.GetCurrentLanTypeStr()/layer.js"></script>
    <script src="~/Scripts/giqci.js?@Config.Common.CurrentToken"></script>
    <script src="~/Global/js/angular-1.4.7.min.js"></script>
    <link href="~/Global/css/bootstrap-datetimepicker.min.css" rel="stylesheet" />
    <link href="~/Global/css/select2/select2.min.css" rel="stylesheet" />
    <link href="~/Global/css/select2/select2-bootstrap.css" rel="stylesheet" />
    <script src="~/Global/js/bootstrap-datetimepicker.min.js"></script>
    <script src="~/Global/js/locales/bootstrap-datetimepicker.zh-CN.js"></script>
    <script src="~/Global/js/select2/@LanCore.GetCurrentLanTypeStr()/select2.js"></script>
    <script src="~/Global/js/select2/@LanCore.GetCurrentLanTypeStr()/select2.zh-CN.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Global/js/ng-tip-validate.js"></script>
    <script src="~/Global/js/service.js?@Config.Common.CurrentToken"></script>
    <script src="~/Global/js/app.js?@Config.Common.CurrentToken"></script>
    <script src="~/Global/js/filters.js?@Config.Common.CurrentToken"></script>
    <script src="~/Global/js/directive.js?@Config.Common.CurrentToken"></script>
    <script src="~/Scripts/jquery.form.js"></script>
    @RenderSection("Header", false)
</head>
<body>
    <div class="alert alert-warning alert-dismissible" role="alert" id="browser-tip" style="display:none;">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <strong>@("warning".KeyToWord())!</strong> @("warning_msg".KeyToWord())
    </div>
    @Html.Partial("_Header")
    @Html.Partial("_TopNav")
    <div id="loading-content">
        <img src="~/Global/images/loading.gif" />
        @("please_wait".KeyToWord())...
    </div>
    <div class="container body-content">
        <div class="row" id="body-content" style="display: none;">
            @RenderBody()
        </div>
        <div ng-controller="BreathController" class="container">
            <div class="modal" role="dialog" data-backdrop="static" data-keyboard="false" aria-labelledby="gridSystemModalLabel" id="breathBox">
                <div class="modal-dialog" role="document">
                    <form name="appform" class="form-horizontal" method="POST">
                        <div class="modal-content">
                            <div class="modal-header">
                                @*<button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>*@
                                <h5 class="modal-title" id="gridSystemModalLabel">@("login_status_is_invalid".KeyToWord())</h5>
                            </div>
                            <div class="modal-body">
                                <div class="form-group has-error" ng-show="!login.result">
                                    <p class="col-sm-offset-2 col-sm-8 help-block">{{login.error}}</p>
                                </div>
                                <div class="form-group" ng-class="{ 'has-error' : (appform.email.$invalid && appform.email.$dirty) || user.email=='' }">

                                    <label class="col-sm-2 control-label">@("email".KeyToWord()) <span style="color: red;">*</span>: </label>

                                    <div class="col-sm-8">
                                        <input name="email" type="email" class="form-control" required ng-model="user.email" />
                                        <small ng-show="appform.email.$invalid" class="help-block">@("not_correct_email_msg".KeyToWord())</small>
                                    </div>
                                </div>
                                <div class="form-group" ng-class="{ 'has-error' : (appform.password.$error.required && !appform.password.$pristine) || user.password=='' }">

                                    <label class="col-sm-2 control-label">@("password".KeyToWord()) <span style="color: red;">*</span>: </label>

                                    <div class="col-sm-8">
                                        <input name="password" type="password" class="form-control" required ng-model="user.password" />
                                        <small ng-show="appform.password.$error.required" class="help-block">@("please_enter_your_password".KeyToWord())</small>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                @*<button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>*@
                                <button type="button" ng-disabled="Logining" class="btn btn-primary" ng-click="ModalLogin()"><span class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span> @("login".KeyToWord())</button>
                            </div>
                        </div><!-- /.modal-content -->
                    </form>
                </div><!-- /.modal-dialog -->
            </div>
        </div>
    </div>
    @Html.Partial("_Footer")
    @RenderSection("Footer", false)
    <script>
        var _Browser = {};
        var checkBrowser = function () {
            var ua = navigator.userAgent.toLowerCase();
            var s;
            (s = ua.match(/msie ([\d.]+)/)) ? _Browser.ie = s[1] :
            (s = ua.match(/firefox\/([\d.]+)/)) ? _Browser.firefox = s[1] :
            (s = ua.match(/chrome\/([\d.]+)/)) ? _Browser.chrome = s[1] :
            (s = ua.match(/opera.([\d.]+)/)) ? _Browser.opera = s[1] :
            (s = ua.match(/version\/([\d.]+).*safari/)) ? _Browser.safari = s[1] : 0;
            if (_Browser.ie <= 9) {
                document.getElementById("browser-tip").style.display = "block";
            }
        }
        window.onload = checkBrowser();
        $("#loading-content").hide();
        $("#body-content").show();
    </script>
</body>
</html>
