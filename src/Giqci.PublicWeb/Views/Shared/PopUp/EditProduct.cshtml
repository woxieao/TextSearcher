@using Giqci.PublicWeb.Extensions
<div class="modal" role="dialog" data-backdrop="static" data-keyboard="false" id="form-add-custom-product">
    <div class="modal-dialog modal-lg">
        <form id="editProduct-form" class="modal-content" name="editProductForm" method="POST" ng-submit="submitAddCustomProduct(editProductForm.$valid)" novalidate>
            <div class="modal-header">
                <h5 class="modal-title form-add-custom-product-title">@("add_customer_goods".KeyToWord())</h5>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group" ng-if="CustomDialogModel.Key!=">
                        <label class="col-sm-2 control-label">-@("customizes_identity".KeyToWord())</label>
                        <div class="col-sm-8">
                            <span class="col-sm-6 form-control-static">{{CustomDialogModel.Key}}</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">@("name".KeyToWord())(@("english".KeyToWord())) <span style="color: red;">*</span></label>
                        <div class="col-sm-8">
                            <input type="text" ng-model="CustomDialogModel.DescriptionEn" class="form-control"
                                   ucc-require="@("name_cannot_be_empty".KeyToWord())" submit-btn-id="addCustomSubmit" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">@("name".KeyToWord())(@("chinese".KeyToWord())) <span style="color: red;">*</span></label>
                        <div class="col-sm-8">
                            <input type="text" ng-model="CustomDialogModel.Description" class="form-control"
                                   ucc-require="@("name_cannot_be_empty".KeyToWord())" submit-btn-id="addCustomSubmit" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">@("brand".KeyToWord()) <span style="color: red;">*</span></label>
                        <div class="col-sm-8">
                            <input type="text" ng-model="CustomDialogModel.Brand" class="form-control"
                                   ucc-require="@("brand_can_not_be_empty".KeyToWord())" submit-btn-id="addCustomSubmit" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">@("hs_code".KeyToWord()) <span style="color: red;">*</span></label>
                        <div class="col-sm-8">
                            <select id="CustomDialogModelHsCode" ajax-select ajax-url="commonhscodes"
                                    ng-model="CustomDialogModel.HsCode" class="form-control" style="width: 100%"></select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">@("package".KeyToWord()) <span style="color: red;">*</span></label>
                        <div class="col-sm-8">
                            <select ng-model="CustomDialogModel.Package" class="form-control half-form-control">
                                <option value="罐装">@("canned".KeyToWord())</option>
                                <option value="瓶装">@("bottled".KeyToWord())</option>
                                <option value="袋装">@("bag".KeyToWord())</option>
                                <option value="盒装">@("box".KeyToWord())</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">@("spec".KeyToWord()) <span style="color: red;">*</span></label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" ng-model="CustomDialogModel.Spec"
                                   ucc-require="@("spec_can_not_be_empty".KeyToWord())" submit-btn-id="addCustomSubmit" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">@("manufacturer".KeyToWord()) <span style="color: red;">*</span></label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" ng-model="CustomDialogModel.Manufacturer"
                                   ucc-require="@("manufacturers_can_not_be_empty".KeyToWord())" submit-btn-id="addCustomSubmit" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">@("country_of_origin".KeyToWord()) <span style="color: red;">*</span></label>
                        <div class="col-sm-8">
                            <select ajax-country ajax-url="countries" id="CustomDialogModelManufacturerCountry"
                                    ng-model="CustomDialogModel.ManufacturerCountry" class="form-control" style="width: 100%"></select>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="addCustomSubmit" type="submit" class="btn btn-default" ng-disabled="alreadySubmit">
                    <span class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span> @("submit".KeyToWord())
                </button>
                <button type="button" class="btn btn-primary" ng-click="showProductList()">@("close".KeyToWord())</button>
            </div>
        </form>
        <!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>