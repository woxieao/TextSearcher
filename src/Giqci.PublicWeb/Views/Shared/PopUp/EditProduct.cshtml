<div class="modal" role="dialog" data-backdrop="static" data-keyboard="false" id="form-add-custom-product">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h5 class="modal-title form-add-custom-product-title">添加非备案商品</h5>
            </div>
            <div class="modal-body">
                <form name="appform" class="form-horizontal" method="POST" novalidate>
                    <div role="alert" class="alert alert-dismissible alert-{{alert.type}}" ng-repeat="alert in alerts">
                        <button aria-label="Close" data-dismiss="alert" ng-click="alert.close()" class="close" type="button"><span aria-hidden="true">×</span></button>
                        <span ng-bind="alert.msg"></span>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">自定义标识</label>
                        <div class="col-sm-10">
                            <input type="text" ng-model="CustomDialogModel.Code" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">名称(英文) <span style="color: red;">*</span></label>
                        <div class="col-sm-10">
                            <input type="text" ng-model="CustomDialogModel.DescriptionEn" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">名称(中文) <span style="color: red;">*</span></label>
                        <div class="col-sm-10">
                            <input type="text" ng-model="CustomDialogModel.Description" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">品牌 <span style="color: red;">*</span></label>
                        <div class="col-sm-10">
                            <input type="text" ng-model="CustomDialogModel.Brand" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">HS编码 <span style="color: red;">*</span></label>
                        <div class="col-sm-10">
                            <select id="CustomDialogModelHsCode" ajax-select ajax-url="commonhscodes" ng-model="CustomDialogModel.HsCode" class="form-control" style="width: 100%"></select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">包装 <span style="color: red;">*</span></label>
                        <div class="col-sm-10">
                            <select ng-model="CustomDialogModel.Package" class="form-control half-form-control">
                                <option value="罐装">罐装</option>
                                <option value="瓶装">瓶装</option>
                                <option value="袋装">袋装</option>
                                <option value="盒装">盒装</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">规格 <span style="color: red;">*</span></label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" ng-model="CustomDialogModel.Spec" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">制造商 <span style="color: red;">*</span></label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" ng-model="CustomDialogModel.Manufacturer" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">原产国 <span style="color: red;">*</span></label>
                        <div class="col-sm-10">
                            <select id="CustomDialogModelManufacturerCountry" ng-model="CustomDialogModel.ManufacturerCountry" class="form-control" ng-options="country.Code as country.CnName for country in loadCountriesDict" style="width: 100%"></select>
                        </div>
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" ng-click="showProductList()"><span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span> 返回</button>
                <button class="btn btn-default" ng-click="submitAddCustomProduct();"><span class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span> 提交</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>