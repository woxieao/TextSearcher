@using Giqci.PublicWeb.Extensions
@model Giqci.PublicWeb.Models.Account.ChangePasswordPageModel

@{
    ViewBag.Title = "change_password".KeyToWord();
}
<div class="panel panel-default" ng-controller="ChanagePasswordController">
    <div class="panel-heading">
        <h1 class="panel-title">@("change_password".KeyToWord())</h1>
    </div>
    <div class="panel-body">
        @*<div role="alert" class="alert alert-dismissible alert-{{alert.type}}" ng-repeat="alert in alerts">
                <button aria-label="Close" data-dismiss="alert" ng-click="alert.close()" class="close" type="button"><span aria-hidden="true">×</span></button>
                <span ng-bind="alert.msg"></span>
            </div>*@
        <form name="appform" class="form-horizontal" method="post" ng-submit="submitForm(appform.$valid,user.password == user.confirm_password)" novalidate>
            <div class="form-group">
                <label class="col-sm-2 control-label">@("current_password".KeyToWord()) <span style="color: red;">*</span> </label>
                <div class="col-sm-8">
                    <input name="oldpassword" type="password" placeholder="@("please_enter_your_current_password".KeyToWord())"
                           class="form-control" required ng-model="user.oldpassword"
                           ucc-require="@("password_can_not_be_empty".KeyToWord())" submit-btn-id="passwordSubmit" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">@("new_password".KeyToWord()) <span style="color: red;">*</span> </label>
                <div class="col-sm-8">
                    <input name="password" type="password" placeholder="@("password_length_msg".KeyToWord())"
                           class="form-control" ng-model="user.password" required
                           ucc-max-length="20" ucc-min-length="6"
                           submit-btn-id="passwordSubmit" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">@("confirm_password".KeyToWord()) <span style="color: red;">*</span> </label>
                <div class="col-sm-8">
                    <input name="confirm_password" type="password" placeholder="@("password_length_msg".KeyToWord())"
                           class="form-control" ng-model="user.confirm_password" required
                           submit-btn-id="passwordSubmit"
                           ucc-validate-func="validateFun(user.password,user.confirm_password)" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-8">
                    <button id="passwordSubmit" class="btn btn-default" ng-click="submit()">
                        <span class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span> @("submit".KeyToWord())
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
