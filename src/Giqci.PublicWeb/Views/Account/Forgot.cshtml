@using Giqci.PublicWeb.Extensions
@model Giqci.PublicWeb.Models.Account.LoginViewModel

@{
    ViewBag.Title = "Forgot";
}
<div class="panel panel-default" ng-controller="ForgotController">
    <div class="panel-heading">
        <h1 class="panel-title">@("forget_password".KeyToWord())</h1>
    </div>
    <div class="panel-body">
        <div role="alert" class="alert alert-dismissible alert-{{alert.type}}" ng-repeat="alert in alerts">
            <button aria-label="Close" data-dismiss="alert" ng-click="alert.close()" class="close" type="button"><span aria-hidden="true">×</span></button>
            <span ng-bind="alert.msg"></span>
        </div>
        <form name="appform" class="form-horizontal" method="POST" ng-submit="submitForm(appform.$valid)" novalidate>
            <div class="form-group">
                <label class="col-sm-3 control-label">@("email".KeyToWord()) <span style="color: red;">*</span> </label>
                <div class="col-sm-6">
                    <input name="email" 
                           type="text" 
                           class="form-control" 
                           required 
                           ucc-require="@("email_can_not_be_empty".KeyToWord())" 
                           submit-btn-id="forgotSubmit"
                           ucc-email
                           ng-model="user.email" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-8">
                    <button type="submit" id="forgotSubmit" class="btn btn-default" ng-disabled="enableDisableButton">
                        <span class="glyphicon glyphicon-ok-circle" aria-hidden="true"></span> {{submitButton}}
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
